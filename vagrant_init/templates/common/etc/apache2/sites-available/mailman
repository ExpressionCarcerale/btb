<VirtualHost *:8080>
  ServerName $MAILMAN_URL_HOST
  ServerName lists.yerk.org
  ServerAlias lists.*
  DocumentRoot /var/www

  RewriteEngine on
  RewriteRule ^/mailman/private/(.*/attachments/.*) /_private/$1 [L,PT]
  RewriteRule ^(/mailman/private/.*/search) $1 [L,PT]
  RewriteRule ^/mailman/(.*)$ /_mailman/$1 [L,PT]
  RewriteRule ^/$ /mailman/listinfo [L,R]


  Alias /_private/ /var/lib/mailman/archives/private/
  ScriptAlias /_mailman/ /usr/lib/cgi-bin/mailman/

  Alias /images/mailman/ /usr/share/images/mailman/
  Alias /archives/ /var/lib/mailman/archives/public/
  Alias /pipermail/ /var/lib/mailman/archives/public/

  LogFormat "%{X-Forwarded-For}i %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" xforwarded
  CustomLog /var/log/apache2/mailman.log xforwarded

  <Directory /var/lib/mailman/archives/private>
    AllowOverride None
    Options FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>

  <Directory /usr/lib/cgi-bin/mailman/>
    AllowOverride None
    Options ExecCGI
    Order allow,deny
    Allow from all
  </Directory>

</VirtualHost>

